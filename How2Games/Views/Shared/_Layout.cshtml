<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - How2Games</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/How2Games.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="flex-container">
            <div id="imgDiv"><img src="/how2games-low-resolution-color-logo-removebg-preview (1).png" id="pfp"></div>
            <form>
                <fieldset>
                    <input type="text" placeholder="Search ...">
                </fieldset>
            </form>
            <nav>
                <ul>
                    
                </ul>

            </nav>
        </div>

    </header>
    <hr />
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - How2Games - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
</body>
</html>
