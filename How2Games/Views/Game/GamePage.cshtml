@using System.Web;
@model Game

<link rel="stylesheet" href="~/css/GamePage.css" />

<div id="Flex-GamePage">
    <h1>@Model.Name</h1>
    <img src="@Model.ImgUrl"></img>
    <div id="Flex-GamePage-Text">
        <p>@Model.ShortDescription</p>
    </div>
    <div id="newQuestionedFlexbox">
        <form method="post">
            <input id="gameId" name="gameId" type="text" value="@Model.Id" style="display: none;"/>
            <input id="gameName" name="gameName" type="text" value="@Model.Name" style="display: none;" />
            <button onclick="NewQuestion()" type="submit" id="NewQuestion">New Question</button>
        </form>
        <partial name="~/Views/SearchBar/_GamePageSearchBar.cshtml" />
    </div>
    <div id="SearchResultsQuestionContainer">
        <div id="searchResultsQuestion">
        </div>
    </div>


</div>


@if (Model.Questions != null)
{
    @foreach (var i in Model.Questions)
    {
        <div>
            <div>
                @i.Votes
            </div>
            <div>
                @i.Title
            </div>
        </div>
    }
}
