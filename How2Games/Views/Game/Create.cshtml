@model Game


<h2>Create New Game</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name" class="form-control" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.ShortDescription"></label>
        <textarea asp-for="@Model.ShortDescription" class="form-control"></textarea>
        <span asp-validation-for="@Model.ShortDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.DetailedDescription"></label>
        <textarea asp-for="@Model.DetailedDescription" class="form-control"></textarea>
        <span asp-validation-for="@Model.DetailedDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.ImgUrl"></label>
        <input asp-for="@Model.ImgUrl" class="form-control" />
        <span asp-validation-for="@Model.ImgUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Tags"></label>
        <select asp-for="@Model.Tags" asp-items="new SelectList(Model.Tags, nameof(Tag.Id), nameof(Tag.Text))" class="form-control" multiple></select>
        <span asp-validation-for="@Model.Tags" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>

