@using How2Games.Domain.Models;
@model HomePageViewModel;

<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="~/css//Home.css" />
    <title>How2Games</title>
</head>

<body>
    <div class="cont">
        <div><h1>Most Viewed</h1></div>
        <div class="imgs">
            @foreach (var v in Model.MostViewedGames)
            {
                <div>
                    <a class="imgA" href="/Game/GamePage?GameName=@v.Name"><img src="@v.ImgUrl" /></a>
                    <div class="gameName">
                        <h1>@v.Name</h1>
                    </div>
                    <div class="views">
                        <p>@v.ViewCount Views</p>
                        <p>@v.Questions.Count Questions</p>
                    </div>
                    <div class="tags">
                        @for (int i = 0; i <= v.GenreTags.Count() - 1 && i !<= 2; i++)
                        {
                            <p>@v.GenreTags.ElementAt(i).Text</p>
                        }
                    </div>

                </div>
            }

        </div>
    </div>
    <div class="cont">
        <div><h1>Most Questions</h1></div>
        <div class="imgs">
            @foreach (var v in Model.MostQuestionGame)
            {
                <div>
                    <a class="imgA" href="/Game/GamePage?GameName=@v.Name"><img src="@v.ImgUrl" /></a>
                    <div class="gameName">
                        <h1>@v.Name</h1>
                    </div>
                    <div class="views">
                        <p>@v.ViewCount Views</p>
                        <p>@v.Questions.Count Questions</p>
                    </div>
                    <div class="tags">
                        @for (int i = 0; i <= v.GenreTags.Count() - 1 && i! <= 2; i++)
                        {
                            <p>@v.GenreTags.ElementAt(i).Text</p>
                        }
                    </div>

                </div>
            }
        </div>
    </div>

</body>
</html>
