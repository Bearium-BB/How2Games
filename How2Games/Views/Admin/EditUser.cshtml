@using System.Web;
@using Microsoft.AspNetCore.Identity;
@using How2Games.Domain.ViewModels;
@model ManageUserRolesViewModel;
@inject RoleManager<IdentityRole> roleManager;

<link rel="stylesheet" href="~/css/AdminSite.css" asp-append-version="true" />
@if (Model != null)
{

    <ul>
        <h5>Name:</h5>
        <p>@Model.user.FullName</p>
        <h5>UserName:</h5>
        <p>@Model.user.UserName</p>
        <h5>Email</h5>
        <p>@Model.user.Email</p>
    </ul>

    @foreach (var role in roleManager.Roles)
    {
        <label>@role.Name</label>
        <input asp-for="Selected" type="checkbox" />
    }
    <div class="divRight">

        <form method="POST" asp-action="DeleteUser" asp-controller="Admin" asp-route-userId="@Model.user.Id">
            <button class="btn btn-primary" type="submit">Delete User</button>
        </form>
        <form method="POST" asp-action="UpdateUser" asp-controller="Admin" asp-route-userId="@Model.user.Id">
            <button class="btn btn-primary" type="submit">Update User</button>
        </form>
    </div>
}
else
{
    <p>No user with that id exists.</p>
}
